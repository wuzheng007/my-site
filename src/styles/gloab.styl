@import './var.styl'
html
  color $words
  font-family '-apple-system', 'BlinkMacSystemFont', 'Roboto', 'Helvetica Neue', '微软雅黑', sans-serif
  overflow hidden
body
  overflow hidden
  margin 0
a
  color inherit // 指定颜色继承父元素的的值
  text-decoration none
  &:hover
    color $primary
ul
  margin 0
  list-style none